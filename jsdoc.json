{
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": [ "jsdoc" ]
	},
	
	"source": {
		"include": [
			"src/global/",
			"src/eventsignal/",
			"src/queue/"
		],
		"includePattern": ".+\\.js(doc)?$"
	},
	
	"plugins": [],
	
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": true,
		"default": {
			"outputSourceFiles": true
		},
		"systemName"      : "PatternJS",
		"footer"          : "",
		"copyright"       : "",
		"navType"         : "vertical",
		"theme"           : "united",
		"linenums"        : true,
		"collapseSymbols" : false,
		"inverseNav"      : true
	},
	
	"opts": {
		"template": "templates/default",
		"encoding": "utf8",
		"destination": "./documentation/",
		"recurse": true
	}
}